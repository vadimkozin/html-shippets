{
  "name": "html-snippets",
  "version": "1.0.0",
  "description": "HTML and CSS snippets",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --no-warnings --ignore=node_modules/** **/*.test.js",
    "sass": "sass -w src/scss/index.scss dist/styles.css",
    "build": "postcss src/scss/index.scss -o dist/styles.css",
    "stylelint": "stylelint **/*.scss",
    "prettier": "prettier --write **/*.scss",
    "prettier-check": "prettier --check **/*.scss",
    "stylelint-check": "stylelint-config-prettier-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [],
  "author": "VK",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.2",
    "cssnano": "^5.0.11",
    "postcss": "^8.3.11",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "postcss-scss": "^4.0.2",
    "postcss-strip-inline-comments": "^0.1.5",
    "prettier": "2.4.1",
    "sass": "^1.43.4",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0"
  },
  "dependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3"
  }
}
